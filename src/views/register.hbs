<form action="/api/users" method="POST">
  <div
    class="bg-secondary d-flex justify-content-center align-items-center vh-100"
  >
    <div
      class="bg-white p-5 rounded-5 text-secondary shadow"
      style="width: 25rem"
    >
      <div class="d-flex justify-content-center">
        <img
          src="/assets/login-icon.svg"
          alt="login-icon"
          style="height: 7rem"
        />
      </div>
      <div class="text-center fs-1 fw-bold">Register</div>
      <div class="input-group mt-4">
        <div class="input-group-text bg-secondary">
          <img
            src="/assets/username-icon.svg"
            alt="username-icon"
            style="height: 1rem"
          />
        </div>

        <input
          class="form-control bg-light"
          type="text"
          name="first_name"
          id="first_name"
          placeholder="Name"
        />
      </div>
      <div class="input-group mt-1">
        <div class="input-group-text bg-secondary">
          <img
            src="/assets/username-icon.svg"
            alt="username-icon"
            style="height: 1rem"
          />
        </div>
        <input
          class="form-control bg-light"
          type="text"
          name="last_name"
          id="last_name"
          placeholder="Last Name"
        />
      </div>
      <div class="input-group mt-1">
        <div class="input-group-text bg-secondary">
          <img
            src="/assets/email-icon.svg"
            alt="username-icon"
            style="height: 1rem"
          />
        </div>
        <input
          class="form-control bg-light"
          type="email"
          name="email"
          id="email"
          placeholder="email@test.com"
        />
      </div>
      <div class="input-group mt-1">
        <div class="input-group-text bg-secondary">
          <img
            src="/assets/age-icon.svg"
            alt="username-icon"
            style="height: 1rem"
          />
        </div>
        <input
          class="form-control bg-light"
          type="number"
          name="age"
          id="age"
          placeholder="Age"
        />
      </div>
      <div class="input-group mt-1">
        <div class="input-group-text bg-secondary">
          <img
            src="/assets/password-icon.svg"
            alt="password-icon"
            style="height: 1rem"
          />
        </div>
        <input
          class="form-control bg-light"
          type="password"
          name="password"
          id="password"
          placeholder="Password"
        />
      </div>

      <!-- Nuevo campo para cart -->
      <div class="input-group mt-1">
        <div class="input-group-text bg-secondary">
          <img
            src="/assets/username-icon.svg"
            alt="cart-icon"
            style="height: 1rem"
          />
        </div>
        <input
          class="form-control bg-light"
          type="text"
          name="cart"
          id="cart"
          placeholder="Cart ID"
        />
      </div>
      <!-- Nuevo campo para role -->
      <div class="input-group mt-1">
        <div class="input-group-text bg-secondary">
          <img
            src="/assets/username-icon.svg"
            alt="role-icon"
            style="height: 1rem"
          />
        </div>
        <select class="form-control bg-light" name="role" id="role">
          <option value="user">user</option>
          <option value="admin">admin</option>
          <option value="guest">guest</option>
        </select>
      </div>

      <div class="d-flex justify-content-around mt-1">
        <div class="d-flex align-items-center gap-1">
          <input class="form-check-input" type="checkbox" />
          <div class="pt-1" style="font-size: 0.9rem">Remember me</div>
        </div>

      </div>
      <button
        type="submit"
        class="btn btn-secondary text-white w-100 mt-4 fw-semibold shadow-sm"
      >
        Register

      </button>
      <a href="https://www.freepik.es/search">Icono de UIcons</a>
  
      <div class="d-flex gap-1 justify-content-center mt-1">
        <div>Do you have an account?</div>
        <a
          href="/"
          class="text-decoration-none text-secondary fw-semibold"
        >Sign in</a>
      </div>
      <div class="p-3">
        <div class="border-bottom text-center" style="height: 0.9rem">
          <span class="bg-white px-3">or</span>
        </div>
      </div>

      <div
        class="btn d-flex gap-2 justify-content-center border mt-3 shadow-sm"
      >
        <img
          src="/assets/github-icon.svg"
          alt="google-icon"
          style="height: 1.6rem"
        />
        <a
          class="fw-semibold text-secondary"
          href="/api/sessions/github"
        >Continue with Github</a>

      </div>
    </div>

  </div>
</form>